<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dev.alleon.mappers.welfare.InstitutionMapper">
    <insert id="insert"
            useGeneratedKeys="true"
            keyColumn="id"
            keyProperty="id">
        INSERT INTO `aeo`.`institutions` (`welfare_id`, `name`, `description`)
        VALUES (#{institution.welfareId},
                #{institution.name},
                #{institution.description})
    </insert>

    <select id="selectByWelfareId" resultType="com.dev.alleon.entities.welfare.InstitutionEntity">
        SELECT `id`          AS `id`,
               `welfare_id`  AS `welfareId`,
               `name`        AS `name`,
               `description` AS `description`
        FROM `aeo`.`institutions`
        WHERE `welfare_id` = #{welfareId}
    </select>
</mapper>